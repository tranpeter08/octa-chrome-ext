{
  "manifest_version": 2,
  "name": "Self-Service OCTA Assistant",
  "version": "0.1",
  "content_scripts": [
    {
      "matches": [
        "https://coachopselfserv.octa.net/SelfService/Bid/*",
        "http://127.0.0.1:5500/*"
      ],
      "js": [
        "vue.min.js",
        "templates.js",
        "config.js",
        "dom.js",
        "utils.js",
        "bids.js",
        "state.js",
        "components.js",
        "content.js"
      ],
      "css": ["style.css"]
    }
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": ["storage", "declarativeContent", "activeTab"]
}
